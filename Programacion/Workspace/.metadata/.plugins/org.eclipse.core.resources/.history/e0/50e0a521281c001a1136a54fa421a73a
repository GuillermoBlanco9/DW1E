package ArrayLists;
import java.util.*;
public class ArraysYtal 

{
	
	
	
	public static void main(String[] args) 
	{	
		
		
		
		ArrayList <Integer> miAL=new ArrayList<>();
		
		for(int i=0;i<=20;i++)
			miAL.add(i);
		
		
		Integer[] array=new Integer[miAL.size()];
		
		array=miAL.toArray(array);
	
		for(int i=8;i<13;i++)
			miAL.remove(i); 
		
		System.out.println(miAL.get(7));
		
		System.out.println(miAL.indexOf(12));
		
		if(miAL.isEmpty())
		{
			System.out.println("Esta vacio");
		}
		else 
		{
			int tamaño=miAL.size();
			System.out.println("El tamaño es de: "+tamaño);
		}
		
		
		miAL.trimToSize();
		
		boolean elemento = miAL.contains(2);
		System.out.println(elemento);
		
	}
}
