
public class GetterSetter {

	
	private String nombre;
	private double sueldo;
	private short edad;
	
	public GetterSetter(String n,double s,short e) 
	{
		nombre=n;
		sueldo=s;
		edad=e;
	}
	
	public static void main(String[] args) 
	{
		GetterSetter nombre1=new GetterSetter("juan",12000.40,(short)24);
		System.out.println(nombre1.toString());
		nombre1.setNombre("Maria");
		System.out.println(nombre1.nombre.toString());
	}
	public void setNombre( String n)
	{
		n=nombre;
	}
	public void setSueldo(double s)
	{
		sueldo=s;
	}
	public void setEdad(short e)
	{
		edad=e;
	}
	public String getNombre()
	{
		return nombre;
	}
	public double getSueldo()
	{
		return sueldo;
	}
	public short getEdad()
	{
		return edad;
	}
	public String toString()
	{
		String mensaje="El nombre es "+nombre+" y su sueldo es "+sueldo+" y tiene "+edad+" años";
		return mensaje;
	}
}
